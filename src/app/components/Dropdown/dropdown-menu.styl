.dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    z-index: 1000;
    display: none;
    min-width: 0;
    padding: 8px 0;
    margin: 0;
    list-style: none;
    font-size: 13px;
    text-align: left;
    background-color: #fff;
    border: 1px solid #bbbbbb;
    border-radius: 0;
    -webkit-box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
    background-clip: padding-box;

    &.pull-right {
        right: 0;
        left: auto;
    }

    .header {
        display: block;
        padding: 4px 16px;
        font-size: 12px;
        line-height: 20px;
        color: #888888;
        white-space: nowrap;
    }

    .divider {
        height: 1px;
        margin: 8px 0;
        overflow: hidden;
        background-color: #eeeeee;
    }

    > .menu-item-wrapper > .menu-item {
        display: block;
        padding: 4px 16px;
        clear: both;
        font-weight: normal;
        line-height: 20px;
        color: #222222;
        text-decoration: none;
        white-space: nowrap;
        cursor: pointer;
    }

    > .menu-item-wrapper.dropdown-submenu > .menu-item {
        padding-right: 32px;
    }

    > .menu-item-wrapper > .menu-item:focus {
        outline: 0;
    }

    > .menu-item-wrapper > .menu-item:hover,
    > .menu-item-wrapper > .menu-item:focus {
        text-decoration: none;
        color: #222222;
        background-color: #eeeeee;
    }

    > .menu-item-wrapper.disabled {
        cursor: not-allowed;
    }
    > .menu-item-wrapper.disabled > .menu-item,
    > .menu-item-wrapper.disabled > .menu-item:hover,
    > .menu-item-wrapper.disabled > .menu-item:focus {
        color: #bbbbbb;
    }
    > .menu-item-wrapper.disabled > .menu-item:hover,
    > .menu-item-wrapper.disabled > .menu-item:focus {
        text-decoration: none;
        background-color: transparent;
        cursor: not-allowed;
    }

    &.selected > .menu-item-wrapper > .menu-item {
        padding: 4px 32px 4px 40px;
    }

    &.selected > .menu-item-wrapper.active > .menu-item:before {
        background-image: url("./icon-check.svg");
        background-position: 0 2px;
        background-repeat: no-repeat;
        content: "";
        display: inline-block;
        height: 20px;
        margin: 0 8px 0 -24px;
        vertical-align: top;
        width: 16px;
    }

    &.selected > .menu-item-wrapper.active > .menu-item,
    &.selected > .menu-item-wrapper.active > .menu-item:hover,
    &.selected > .menu-item-wrapper.active > .menu-item:focus {
        text-decoration: none;
        outline: 0;
    }
}

.dropup > .dropdown-menu {
    top: auto;
    bottom: 100%;
}

.dropdown.open > .dropdown-menu {
    display: block;
}
